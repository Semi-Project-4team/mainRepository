<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="animal.team.animalhospital.hospital.model.dao.MyPageMapper">

    <resultMap id="myPageResultMap" type="animal.team.animalhospital.hospital.model.dto.PersonDTO">
        <id property="name" column="person_name"/>
        <result property="email" column="person_email"/>
        <result property="phoneNumber" column="person_phone_number"/>
    </resultMap>

    <resultMap id="favoriteResultMap" type="animal.team.animalhospital.hospital.model.dto.FavoriteDTO">
        <id property="personCode" column="person_code"/>
        <result property="favoriteName" column="favorite_name"/>
    </resultMap>

    <resultMap id="petResultMap" type="animal.team.animalhospital.hospital.model.dto.PetDTO">
        <result property="petProfile" column="pet_profile"/>
        <result property="petName" column="pet_name"/>
        <result property="petType" column="pet_type"/>
        <result property="petGender" column="pet_gender"/>
        <result property="petBirth" column="pet_birth"/>
        <result property="petVaccination" column="pet_vaccination"/>
        <result property="petChip" column="pet_chip"/>
    </resultMap>

    <select id="findMyInfo" resultMap="myPageResultMap">
        SELECT
            person_name,
            person_email,
            person_phone_number
        FROM
            tbl_person
    </select>

    <select id="findMyFavorite" resultMap="favoriteResultMap">
        SELECT
            favorite_name
        FROM
            tbl_favorite
    </select>

    <delete id="deleteFavorite" parameterType="String">
        DELETE
        FROM
            tbl_favorite
        WHERE
            favorite_name = #{name}
    </delete>

    <select id="findMyPet" resultMap="petResultMap">
        SELECT
            pet_profile,
            pet_name,
            pet_type,
            pet_gender
            pet_birth,
            pet_vaccination,
            pet_chip
        FROM
            tbl_pet
    </select>

</mapper>